package messenger.login;

import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import javax.swing.JFrame;
import javax.swing.JOptionPane;

import messenger.db.ConnectionManager;

public class LoginMain extends JFrame{
   MemberLogin login;
   ConnectionManager conM=new ConnectionManager();
   
   //프로그램을 켰을 때 오라클 데이터베이스에 즉시 접근되야 한다
  
      
   //private Connection con;
   
   public LoginMain() {
      super("네이트톡");
      connect();
      
      login=new MemberLogin();
      
      add(login);
      
      //윈도우 창 종료      
      addWindowListener(new WindowAdapter() {
         public void windowClosing(WindowEvent e) {
            disconnect();
            System.exit(0);
         }
      });
      
      setBounds(700,200,500, 800);
      setResizable(false);
      setVisible(true);
      setDefaultCloseOperation(EXIT_ON_CLOSE);
   }
   public Connection getCon() {
      return con;
   }
   public void connect() {
      try {
         Class.forName(conM.getDriver());
         con=DriverManager.getConnection(url, user, password);
         con.setAutoCommit(true);
         if(con==null) {
            JOptionPane.showMessageDialog(this, "접속 실패");
         }
      } catch (ClassNotFoundException e) {
         e.printStackTrace();
      } catch (SQLException e) {
         e.printStackTrace();
      }
   }
   public void disconnect() {
      if(con !=null) {
         try {
            con.close();
         } catch (SQLException e) {
            e.printStackTrace();
         }
      }
   }
   
   public static void main(String[] args) {
      new LoginMain();
   }
}