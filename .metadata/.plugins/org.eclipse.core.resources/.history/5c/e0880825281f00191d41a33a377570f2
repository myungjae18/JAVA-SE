package messenger.login;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Component;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Insets;

import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.JTextField;
import javax.swing.border.Border;

import messenger.utils.ImageLoad;

public class Login extends JPanel{
	JPanel p_north, p_txt, p_txtArea, p_idArea, p_pwArea, p_south; //영역 구분을 위한 패널
	JButton bt_accept, bt_regist; //로그인 확인 버튼과 회원 가입 버튼
	JTextField n_id, n_pw; //아이디와 비밀번호를 표시할 텍스트
	JTextField t_id, t_pw; //아이디와 비밀번호를 입력하게 될 입력창
	
	ImageLoad imageload;
	public Login() {
		p_north=new JPanel();
		p_txt=new JPanel();
		p_txtArea=new JPanel();
		p_idArea=new JPanel();
		p_pwArea=new  JPanel();
		p_south=new JPanel();
		//-------------------------------------
		bt_accept=new JButton("확인");
		bt_regist=new JButton("가입");
		//-------------------------------------
		n_id=new JTextField(2);
		n_pw=new JTextField(2);
		//-------------------------------------
		t_id=new JTextField(15);
		t_pw=new JTextField(15);
		
		/*<텍스트 관련 설정>*/
		n_id.setFont(new Font("", Font.BOLD, 20));
		n_id.setEditable(false);
		n_id.setSize(30, 30);
		n_id.setText("id");
		//-------------------------------------
		n_pw.setFont(new Font("", Font.BOLD, 20));
		n_pw.setEditable(false);
		n_pw.setSize(30, 30);
		n_pw.setText("pw");
		//-------------------------------------
		t_id.setFont(new Font("", Font.BOLD, 20));
		t_id.setSize(30, 200);
		//-------------------------------------
		t_pw.setFont(new Font("", Font.BOLD, 20));
		t_pw.setSize(30, 200);		
		
		/*<내부 패널들 관련 설정>*/
		p_north.setPreferredSize(new Dimension(500, 700));
		p_north.setBackground(Color.WHITE);
		p_north.add(p_txt, BorderLayout.WEST);
		p_north.add(p_txtArea);
		//-------------------------------------
		p_txtArea.setPreferredSize(new Dimension(440, 700));
		p_txtArea.setBackground(Color.WHITE);
		p_txtArea.add(p_idArea);
		p_txtArea.add(p_pwArea, BorderLayout.SOUTH);
		//-------------------------------------
		p_txt.setPreferredSize(new Dimension(50, 700));
		p_txt.setBackground(Color.WHITE);
		p_txt.add(n_id);
		p_txt.add(n_pw);		
		//-------------------------------------
		p_idArea.setPreferredSize(new Dimension(440, 32));
		p_idArea.setBackground(Color.WHITE);
		p_idArea.add(t_id);
		//-------------------------------------
		p_pwArea.setPreferredSize(new Dimension(440, 50));
		p_pwArea.setBackground(Color.WHITE);
		p_pwArea.add(t_pw);
		//-------------------------------------
		p_south.setPreferredSize(new Dimension(500, 100));
		p_south.setBackground(Color.WHITE);
		p_south.add(bt_accept);
		p_south.add(bt_regist);
		
		/*<Login 패널 관련 설정>*/
		setLayout(new FlowLayout());
		//-------------------------------------
		add(p_north);
		add(p_south, BorderLayout.SOUTH);		
		//-------------------------------------
		setBackground(Color.WHITE);
		setSize(500, 800);
		setVisible(true);		
	}
}
