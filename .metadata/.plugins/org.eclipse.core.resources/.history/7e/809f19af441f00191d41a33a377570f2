		bt_check=new JButton("중복 확인");
		bt_regist=new JButton("가입");
		
		/*<텍스트 관련 설정>*/
		n_name.setFont(new Font("", Font.BOLD, 20));
		n_name.setEditable(false);
		n_name.setBackground(Color.GRAY);
		n_name.setSize(30, 30);
